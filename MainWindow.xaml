<Window
	x:Class="ModernThemables.Views.MainWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:controls="clr-namespace:ModernThemables.Controls"
	x:Name="Window"
	Title="Finance Tracker"
	Width="800"
	Height="450"
	AllowsTransparency="False"
	Background="Black"
	RenderOptions.BitmapScalingMode="NearestNeighbor"
	RenderOptions.ClearTypeHint="Enabled"
	SnapsToDevicePixels="True"
	UseLayoutRounding="True"
	WindowStyle="None">
	<WindowChrome.WindowChrome>
		<WindowChrome CaptionHeight="24" ResizeBorderThickness="5" />
	</WindowChrome.WindowChrome>
	<controls:DatetimeTextBox Margin="50" HorizontalAlignment="Left" />
</Window>
