<Window
	x:Class="ModernThemables.Controls.ColourPickerDialogue"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:ModernThemables.Controls"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	AllowsTransparency="False"
	Background="Black"
	RenderOptions.BitmapScalingMode="NearestNeighbor"
	RenderOptions.ClearTypeHint="Enabled"
	WindowStartupLocation="CenterOwner"
	SnapsToDevicePixels="True"
	UseLayoutRounding="True"
	SizeToContent="WidthAndHeight"
	WindowStyle="None"
	mc:Ignorable="d">
	<WindowChrome.WindowChrome>
		<WindowChrome CaptionHeight="24" ResizeBorderThickness="5" />
	</WindowChrome.WindowChrome>
	<Grid>
		<local:MainWindowControl IsToolWindow="True" />
		<local:ColourPicker Margin="10,40,10,10" x:Name="ColourPicker"/>
		<local:ExtendedButton
			Margin="10"
			Padding="20,3"
			HorizontalAlignment="Right"
			Click="ExtendedButton_Click"
			VerticalAlignment="Bottom"
			Background="{DynamicResource ControlClickablePartBrush}"
			MouseOverColour="{DynamicResource ControlClickablePartMouseOverBrush}"
			MouseDownColour="{DynamicResource ControlClickablePartMouseDownBrush}"
			Foreground="{DynamicResource TextBrush}"
			Content="OK"
			CornerRadius="5" />
	</Grid>
</Window>
