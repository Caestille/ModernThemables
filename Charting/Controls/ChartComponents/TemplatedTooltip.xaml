<UserControl
	x:Class="ModernThemables.Charting.Controls.ChartComponents.TemplatedTooltip"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	x:Name="root"
	HorizontalAlignment="Stretch"
	VerticalAlignment="Stretch"
	mc:Ignorable="d">
	<Grid x:Name="Grid">
		<Border
			BorderBrush="{Binding Path=Fill}"
			BorderThickness="2,0,0,0"
			CornerRadius="5"
			IsHitTestVisible="False">
			<ContentControl Content="{Binding Path=TemplatedContent, UpdateSourceTrigger=PropertyChanged}" ContentTemplate="{Binding Path=TooltipTemplate}" />
		</Border>
	</Grid>
</UserControl>
