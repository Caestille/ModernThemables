<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:ModernThemables.Controls">

    <ControlTemplate x:Key="GenericBlurHostTemplate" TargetType="{x:Type controls:BlurHost}">
        <Grid>
            <Border
                x:Name="PART_BlurDecorator"
                BorderBrush="{TemplateBinding BorderBrush}"
                BorderThickness="{TemplateBinding BorderThickness}" />
            <ContentPresenter />
        </Grid>
    </ControlTemplate>

    <Style TargetType="{x:Type controls:BlurHost}">
        <Setter Property="Template" Value="{StaticResource GenericBlurHostTemplate}" />
    </Style>

</ResourceDictionary>
